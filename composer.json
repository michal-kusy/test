  "require": {
      "php": "7.2.*",
      "ext-json": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "phpunit/phpunit": "^8.5",
    "phpstan/phpstan": "^0.12.42"
  },
  "autoload-dev": {
    "psr-4": {
      "App\\": "src/app/"
    }
  },
  "scripts": {
    "code-analysis": [
      "phpcbf --standard=PSR2 src/",
      "phpcs --standard=PSR2 src/",
      "phpstan analyse -l max src/"
